<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".MainActivity"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/main_current_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_current_title"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            tools:context=".MainActivity">

            <TextView
                android:id="@+id/main_step_count_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_step_count_title"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/main_step_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/step_count"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            tools:context=".MainActivity">

            <TextView
                android:id="@+id/main_distance_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/distance_title"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/main_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/distance"
                android:textSize="24sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/main_intention_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/last_intention_title"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            tools:context=".MainActivity">

            <TextView
                android:id="@+id/main_intention_step_count_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_step_count_title"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/main_intention_step_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/step_count"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            tools:context=".MainActivity">

            <TextView
                android:id="@+id/main_intention_distance_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/distance_title"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/main_intention_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/distance"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            tools:context=".MainActivity">

            <TextView
                android:id="@+id/main_intention_time_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_intention_time_title"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/main_intention_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_intention_time"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            tools:context=".MainActivity">

            <Button
                android:id="@+id/button_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/start_new_routes_text"
                android:textSize="24sp"
                tools:text="START NEW ROUTE" />

            <Button
                android:id="@+id/button_route"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/go_to_routes_text"
                android:textSize="24sp" />

            <Button
                android:id="@+id/mock_btn"
                android:layout_width="242dp"
                android:layout_height="wrap_content"
                android:text="@string/mock_btn"
                android:textSize="24sp" />

            <Button
                android:id="@+id/team_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Team Page"
                android:textSize="24sp"/>

            <Button
                android:id="@+id/proposed_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Proposed Walk Page"
                android:textSize="24sp"/>

        </LinearLayout>
    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>
